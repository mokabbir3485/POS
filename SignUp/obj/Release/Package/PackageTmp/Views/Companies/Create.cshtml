
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_PointOfSaleLayout.cshtml";
}

<script src="~/AngularJS/angular.js"></script>
<script src="~/AngularJS/angular-local-storage.min.js"></script>
<script src="~/AngularJS/authInterceptorService.js"></script>
<script src="~/AngularJS/Company.js"></script>
@section style
    {
    <style>

        .form-control {
            display: inline;
        }
    </style>
}
<div ng-app="companyApp">
    <div ng-controller="companyController">
        <div class="card mb-3  row">
            <div class="card-body">
                <h6 class="m-0 font-weight-bold text-primary" style="padding-bottom:5px;">Add Company</h6>
                <table style="width: 100%">
                    <tbody>
                        <tr>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="text" ng-model="Company.CompanyName" placeholder="Name">
                            </td>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="text" ng-model="Company.BusinessType" placeholder="Business Type">
                            </td>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="text" ng-model="Company.CompanyAddress" placeholder="Company Address">
                            </td>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="text" ng-model="Company.FactoryAddress" placeholder="Factory Address">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <button type="button" ng-click="AddCompany(Company);" ng-disabled="!Company.CompanyName || !Company.CompanyAddress || !Company.BusinessType" class="btn btn-sm btn-outline-primary mb-1">{{btnSave}}</button>
                                <button type="button" ng-click="ResetObject();" class="btn btn-sm btn-outline-warning mb-1">Reset</button>
                                <button type="button" ng-click="RedirectToList();" class="btn btn-sm btn-outline-info mb-1">List</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <h6 class="m-0 font-weight-bold text-primary" style="padding-top: 10px; padding-bottom: 10px;">Company List</h6>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Factory Address</th>
                                <th>Business Type</th>
                                @*<th>Status</th>*@
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="company in CompanyTempList">
                                <td>{{company.CompanyName}}</td>
                                <td>{{company.CompanyAddress}}</td>
                                <td>{{company.FactoryAddress}}</td>
                                <td>{{company.BusinessType}}</td>
                                @*<td ng-if="company.Status == true">Yes</td>
                                <td ng-if="company.Status == false">No</td>*@
                                <td>
                                    <button type="button" ng-click="Remove(company);" class="btn btn-sm btn-outline-danger mb-1">Remove</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div style="padding-top: 10px;">
                    <button type="button" ng-click="SaveCompanies();" ng-disabled="CompanyTempList.length<=0" class="btn btn-sm btn-outline-primary mb-1">Submit</button>
                    <button type="button" ng-click="RedirectToList();" class="btn btn-sm btn-outline-warning mb-1">Cancel</button>
                </div>
            </div>
        </div>

    </div>
</div>