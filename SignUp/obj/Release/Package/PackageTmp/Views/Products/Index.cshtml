
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PointOfSaleLayout.cshtml";
}
<script src="~/AngularJS/angular.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/AngularJS/angular-local-storage.min.js"></script>
<script src="~/AngularJS/authInterceptorService.js"></script>
<script src="~/AngularJS/product.js"></script>

<div ng-app="productApp">
    <div class="row widget" ng-controller="productController">
        <div class="col-lg-12 mb-3">
            <div class="row-fluid hidden-print">
                <div>
                    <label>
                        <select ng-model="ddlPage" id="PageId" name="PageId" class="input-mini" ng-options="page.PageNoShow for page in PageList track by page.PageId" ng-init="ddlPage.PageId =1" title="Page" data-toggle="tooltip"></select>&nbsp;records per page
                    </label>
                    <button class="btn btn-sm btn-outline-primary mb-1" ng-click="PrintDoc();"><i class="fas fa-print"></i> Print</button>
                    <button type="button" disabled class="btn btn-sm btn-outline-primary mb-1"><i class="fas fa-clipboard-list"></i> Product List</button>
                    <button type="button" ng-click="AddNew();" class="btn btn-sm btn-outline-primary mb-1"><i class="far fa-plus-square"></i> Add New</button>
                    <label style="float: right;">
                        <i class="fab fa-searchengin"></i> Search:
                        <input type="text" aria-controls="sample_1" ng-model="SearchItem" class="input-medium">
                    </label>
                </div>
              
            </div>
            <div class="control-print">
                <div class="table-responsive table-bordered">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Original Price</th>
                                <th>MRP Price</th>
                                <th>Qty</th>
                                @*<th>Status</th>*@
                                <th class="hidden-print">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="product in productList | filter: SearchItem | limitTo:ddlPage.PageNo">
                                <td>{{product.ProductNo}}</td>
                                <td>{{product.ProductName}}</td>
                                <td>{{product.CategoryName}}</td>
                                <td>{{product.Description}}</td>
                                <td>{{product.OriginalPrice}}</td>
                                <td>{{product.MarkupPrice}}</td>
                                <td>{{product.ProductQty}}</td>
                                @*<td class="text-center">{{product.Status}}</td>*@
                                <td class="text-center hidden-print">
                                    <button class="btn btn-sm btn-outline-primary mb-1" ng-click="Edit(product)">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger mb-1" ng-click="Delete(product)">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    @*<div id="status">
                <button class="btn btn-sm btn-outline-primary mb-1" ng-click="balanceSheet();">Calculate</button>&emsp;{{status}}
            </div>*@
                </div>
            </div>
        </div>
    </div>
</div>

