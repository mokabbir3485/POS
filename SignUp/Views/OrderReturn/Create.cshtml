
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_PointOfSaleLayout.cshtml";
}


<script src="~/AngularJS/angular.min.js"></script>
<script src="~/AngularJS/angular-local-storage.min.js"></script>
<script src="~/AngularJS/authInterceptorService.js"></script>
<script src="~/AngularJS/jquery-2.2.3.min.js"></script>
<script src="~/AngularJS/jquery-ui.js"></script>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/AngularJS/OrderReturn.js"></script>

@section style
    {
    <style>
        .form-control {
            display: inline;
        }
    </style>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
}
<div ng-app="orderReturnApp">
    <div ng-controller="orderReturnController">
        <div class="card mb-3  row">
            <div class="card-body">
                <h6 class="m-0 font-weight-bold text-primary" style="padding-bottom:5px;">Add Order Return</h6>
                <table style="width: 100%">
                    <tbody>
                        <tr>
                            
                            <td>
                                <input id="orderReturnDate" class="form-control form-control-sm  mb-3" style="width: 100%;" type="date" name="name" ng-model="OrderReturnObj.OrderReturnDate" ng-change="disSave();" title="Order Return Date" placeholder="Order Return Date" />
                            </td>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="text" name="name" ng-model="OrderReturnObj.Description" title="Description" placeholder="Description" />
                            </td>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="text" name="name" ng-model="OrderReturnObj.OrderReturnAmmount" title="Total Price" placeholder="Total Price " readonly />

                            </td>
                            <td>

                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="text" name="name" ng-model="OrderReturnObj.OrderReturnQuantity" title="Total QTY" placeholder="Total QTY" readonly />

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <select class="form-control form-control-sm  mb-3" style="width: 100%;" ng-model="ddlProduct" ng-options="item.ProductName for item in productList track by item.ProductId" ng-change="OriginalPrice = ddlProduct.OriginalPrice; MarkupPrice = ddlProduct.MarkupPrice; checkQty(); " title="Product Name" placeholder="Product Name">
                                    <option value="">--Select Product--</option>
                                </select>
                            </td>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="text" name="name" ng-model="itemQty" ng-change="btnDisable();" ng-disabled="disableTxtQty" title="Item QTY" placeholder="Item QTY" />
                            </td>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="number" name="name" ng-model="OriginalPrice" title="Original Price" placeholder="Original Price " readonly/>

                            </td>
                            <td>
                                <input class="form-control form-control-sm  mb-3" style="width: 100%;" type="number" name="name" ng-model="MarkupPrice" title="MRP" placeholder="MRP" readonly/>

                            </td>

                        </tr>
                        <tr>
                            <td>
                                <button type="button" ng-disabled="disableBtnAddProduct;" ng-click="addProduct();" class="btn btn-sm btn-outline-primary mb-1">{{btnSave}}</button>
                                <button type="button" ng-click="ResetObject();" class="btn btn-sm btn-outline-warning mb-1">Reset</button>
                                <button type="button" ng-click="RedirectToList();" class="btn btn-sm btn-outline-info mb-1">List</button>

                            </td>
                        </tr>
                    </tbody>
                </table>
                <h6 class="m-0 font-weight-bold text-primary" style="padding-top: 10px; padding-bottom: 10px;">Product List</h6>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>Name</th>
                                <th>Original Price</th>
                                <th>MRP</th>
                                <th>Qty</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="product in AddproductList">
                                <td>{{product.ProductName}}</td>
                                <td>{{product.OriginalPrice}}</td>
                                <td>{{product.MarkupPrice}}</td>
                                <td>{{product.ProductQty}}</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-danger mb-1" ng-click="removebtn(product)">Remove</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div style="padding-top: 10px;">
                    <button class="btn btn-primary" ng-disabled="AddproductList.length<=0 || disDate" ng-click="OrderReturnSave()">Save</button>
                    <button class="btn btn-primary" ng-click="resetProduct()">Reset</button>
                </div>
            </div>
        </div>

    </div>
</div>